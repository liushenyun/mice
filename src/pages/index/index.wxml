<wxs src="../../wxs/config.wxs" module="config" />
<view class="index-container">
  <scroll-view class="index-scroll" scroll-y bindscrolltolower="scrolltolower">
    <view class="show-search">
      <view class="show-search-text" bind:tap="toSearchActive">
        <image mode="aspectFit" src="../../images/ic_home_search.png">搜索</image>
        <text>搜索</text>
      </view>
    </view>
    <view class="swiper-wrap">
      <swiper circular="{{config.swperConfig.circular}}" indicator-color="{{config.swperConfig.indicatorColor}}" indicator-dots="{{config.swperConfig.indicatorDots}}" autoplay="{{config.swperConfig.autoplay}}" interval="{{config.swperConfig.interval}}" duration="{{config.swperConfig.duration}}" previous-margin="20px" next-margin="20px" bindchange="swiperCurrentChange">
        <block wx:for="{{imgUrls}}" wx:key="{{index}}">
          <swiper-item>
            <image bindtap="toWebViewTab" data-url="{{item.url}}" src="{{item.img}}" class="swiper-image {{index == swiperCurrent ? 'swiper-image-current' : ''}}" />
          </swiper-item>
        </block>
      </swiper>
      <view class="dots">
        <block wx:for="{{imgUrls}}" wx:key="unique">
          <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
        </block>
      </view>
    </view>
    <view class="line"></view>
    <!-- 筛选button -->
    <view class="btn-wrap">
      <scroll-view scroll-x="true" style="width: 100%;white-space:nowrap">
        <view bind:tap="btnTap" data-type="{{item.type}}" wx:for="{{btnList}}" wx:key="{{index}}" class="btn-btn icar-clear-after-border {{item.type == btnActiveType ? 'checked-btn-active': ''}}" size="mini">
          <image mode="aspectFit" src="../../images/{{item.type == btnActiveType ? item.activeImg: item.img}}.png"></image>
          {{item.title}}
        </view>
      </scroll-view>
    </view>
    <view class="list-wrap">
      <testList testList="{{list}}" bind:jumpEvent="listToH5Active"></testList>
      <view class="bottom-tip"> ---  已经到底了 ---</view>
    </view>
  </scroll-view>
</view>